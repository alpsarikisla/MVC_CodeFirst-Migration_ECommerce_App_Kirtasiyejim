@model IEnumerable<KirtasiyejimWebApp.Models.Category>
@using KirtasiyejimWebApp.Models;
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Areas/AdminManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="box">
    <div class="title">
        <h3>Kategoriler <small style="font-weight:100"> Tüm Kategoriler</small></h3>
    </div>
    <div class="content">
        <table class="table" cellpadding="0" cellspacing="0">
            <tr>
                <th>No</th>
                <th>Isim</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>Seçenekler</th>
            </tr>
            @foreach (Category item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    @if (item.Description.Length >= 50)
                    {
                        <td>@item.Description.Substring(0, 50) ...</td>
                    }
                    else
                    {
                        <td>@item.Description</td>
                    }
                    <td>@item.IsActive</td>
                    <td>

                    </td>
                </tr>
            }
        </table>
    </div>
</div>

