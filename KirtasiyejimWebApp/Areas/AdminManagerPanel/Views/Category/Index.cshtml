@model IEnumerable<KirtasiyejimWebApp.Models.Category>
@using KirtasiyejimWebApp.Models;
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Areas/AdminManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="box">
    <div class="title">
        <a href="@Url.Action("Create","Category")" class="eklebutton">+ Ekle</a><h3>Kategoriler <small style="font-weight:100"> Tüm Kategoriler</small></h3>
        <div style="clear:both"></div>
    </div>
    <div class="content">
        <table class="table" cellpadding="0" cellspacing="0">
            <tr>
                <th>No</th>
                <th>Isim</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>Seçenekler</th>
            </tr>
            @foreach (Category item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>
                        @if (item.Description != null)
                        {
                            if (item.Description.Length >= 50)
                            {
                                <label> @item.Description.Substring(0, 50) ...</label>
                            }
                            else
                            {
                                @item.Description
                            }
                        }
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <label>Aktif</label>
                        }
                        else
                        {
                            <label>Pasif</label>
                        }
                    </td>
                    <td>
                        <div>
                            <a href="@Url.Action("ChangeStatus", "Category", new {id= item.ID})" class="tableButton change"><i class="fa fa-recycle"></i></a>
                            <a href="@Url.Action("Edit","Category", new {id= item.ID})" class="tableButton edit"><i class="fa fa-edit"></i></a>
                            <a href="@Url.Action("Delete","Category", new {id= item.ID})" class="tableButton delete"><i class="fa-regular fa-trash-can"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

